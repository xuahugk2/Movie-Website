<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Shared/css/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Shared/css/layout/base.css" rel="stylesheet" />
    <link href="~/Shared/css/layout/layout.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css">
</head>
<body>
    <div class="nav navbar bg-dark">
        <div class="logo">@Html.ActionLink("Logo", "Index", "Home")</div>
        <div class="links">
            <ul>
                <li>@Html.ActionLink("Phim chiếu rạp", "Classify", "Home", new { type = "theater" })</li>
                <li>@Html.ActionLink("Phim hoạt hình", "Classify", "Home", new { type = "anime" })</li>
                <li>@Html.ActionLink("Theo dõi", "Favorite", "Home")</li>
                <li>@Html.ActionLink("Trực tiếp", "Stream", "Home")</li>
            </ul>
        </div>
        <div class="search-box">
            <form method="post" action="~/Home/Watcher">
                <input type="text" id="data" name="data" placeholder="Nhập tên phim..." required />
                <button type="submit"><i class="bi bi-arrow-right-circle"></i></button>
            </form>
        </div>
        <div class="users">
            @if (Session["userEmail"] != null)
            {
                <a class="users_name text-decoration-none text-light" href="#">
                    @Session["userName"]
                </a>
                <a class="logoff_btn btn-login text-decoration-none text-light" href="@Url.Action("Logout", "Account")">Đăng xuất</a>
            }
            else
            {
                @Html.ActionLink("Đăng nhập", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn-login" })
            }
        </div>
    </div>

    <div class="body">
        @RenderBody()
    </div>

    <script src="~/Shared/js/layout.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
